<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#4A4A4A">

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="408dp"
        android:layout_height="396dp"
        android:foregroundGravity="center_vertical|center_horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/Temperatura"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/fondo2">

                <EditText
                    android:id="@+id/temperatura"
                    android:layout_width="95dp"
                    android:layout_height="0dp"
                    android:background="@drawable/fondo4"
                    android:gravity="center_horizontal|center_vertical"
                    android:hint="00.0"
                    android:inputType="numberDecimal"
                    android:textColor="#000000"
                    android:textColorHint="#000000"
                    android:textSize="24sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/texttemperatura"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/temperatura"
                    android:textColor="#FFFFFF"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/temperatura"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/Tos"
                android:layout_width="300dp"
                android:layout_height="100dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/fondo2">

                <RadioGroup
                    android:id="@+id/Rb_Tos"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:background="@drawable/fondo4"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <RadioButton
                        android:id="@+id/LEVE"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:buttonTint="#000000"
                        android:text="@string/leve"
                        android:textColor="#000000" />

                    <RadioButton
                        android:id="@+id/MODERADA"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:buttonTint="#000000"
                        android:text="@string/moderada"
                        android:textColor="#000000" />

                    <RadioButton
                        android:id="@+id/GRAVE"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:buttonTint="#000000"
                        android:text="@string/grave"
                        android:textColor="#000000" />
                </RadioGroup>

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/tos"
                    android:textColor="#F8F8F8"
                    android:textSize="30sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/Rb_Tos"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/Respiratorio"
                android:layout_width="300dp"
                android:layout_height="100dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/fondo2">

                <TextView
                    android:id="@+id/textrespiratorio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/respiratorio"
                    android:textColor="#F8F8F8"
                    android:textSize="24sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <Button
                    android:id="@+id/btnRespiratorio"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:background="@drawable/celeste"
                    android:hint="@string/sin_dolor"
                    android:textColorHint="#000000"
                    android:textSize="18sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textrespiratorio"
                    app:layout_constraintVertical_bias="1.0" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/Garganta"
                android:layout_width="300dp"
                android:layout_height="100dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/fondo2">

                <TextView
                    android:id="@+id/textgarganta"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/garganta"
                    android:textColor="#F8F8F8"
                    android:textSize="24sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <Button
                    android:id="@+id/btnGarganta"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:background="@drawable/celeste"
                    android:hint="@string/sin_dolor"
                    android:textColorHint="#000000"
                    android:textSize="18sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textgarganta"
                    app:layout_constraintVertical_bias="1.0" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/Anosmia"
                android:layout_width="300dp"
                android:layout_height="100dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/fondo2">

                <RadioGroup
                    android:id="@+id/Rb_Anosmia"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:background="@drawable/fondo4"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <RadioButton
                        android:id="@+id/SI_Anosmia"
                        android:layout_width="match_parent"
                        android:layout_height="51dp"
                        android:buttonTint="#000000"
                        android:text="@string/si"
                        android:textColor="#000000" />

                    <RadioButton
                        android:id="@+id/NO_Anosmia"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginRight="70dp"
                        android:buttonTint="#000000"
                        android:text="@string/no"
                        android:textColor="#000000" />
                </RadioGroup>

                <TextView
                    android:id="@+id/textAnosmia"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/falta_olfato"
                    android:textColor="#F8F8F8"
                    android:textSize="18sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/Rb_Anosmia"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/Disgeusia"
                android:layout_width="300dp"
                android:layout_height="100dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/fondo2">

                <RadioGroup
                    android:id="@+id/Rb_Disgeusia"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:background="@drawable/fondo4"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <RadioButton
                        android:id="@+id/SI_Disgeusia"
                        android:layout_width="match_parent"
                        android:layout_height="51dp"
                        android:buttonTint="#000000"
                        android:text="@string/si"
                        android:textColor="#000000" />

                    <RadioButton
                        android:id="@+id/NO_Disgeusia"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginRight="70dp"
                        android:buttonTint="#000000"
                        android:text="@string/no"
                        android:textColor="#000000" />
                </RadioGroup>

                <TextView
                    android:id="@+id/textDisgeusia"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/falta_gusto"
                    android:textColor="#F8F8F8"
                    android:textSize="18sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/Rb_Disgeusia"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </LinearLayout>
    </ScrollView>

    <TextView
        android:id="@+id/textView4"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:background="#0E5891"
        android:gravity="center_horizontal|center_vertical"
        android:text="@string/valores_covid"
        android:textColor="#FFFFFF"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/GUARDARCOVID"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="20dp"
        android:background="@drawable/button1"
        android:text="@string/guardar"
        android:textColor="#4A4A4A"
        app:layout_constraintBottom_toBottomOf="@+id/CANCELARCOVID"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/CANCELARCOVID" />

    <Button
        android:id="@+id/CANCELARCOVID"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/button1"
        android:text="@string/cancelar"
        android:textColor="#4A4A4A"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/scrollView2"
        app:layout_constraintVertical_bias="0.855" />

</androidx.constraintlayout.widget.ConstraintLayout>